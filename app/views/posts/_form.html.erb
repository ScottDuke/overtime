<%= form_with model: @post, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label(:date) %>
    <%= f.date_field :date, { class: "form-control" } %>
  </div>
  
  <div class="form-group">
    <%= f.label(:overtime_request) %>
    <%= f.number_field :overtime_request, { class: "form-control", step: 0.5 } %>
  </div>

  <div class="form-group">
    <%= f.label(:rationale) %>
    <%= f.text_area :rationale, { class: "form-control" } %>
  </div>

  <%= render partial: "status", locals: { f: f } %>

  <%= f.submit("Save", { class: "btn btn-primary btn-block" }) %>
<% end %>
