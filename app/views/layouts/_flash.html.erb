<% if flash.any? %>
  <% flash.each do |type, message| %>
    <% background_colour = background_colour_for(type) %>
    <script type="text/javascript">
      Toastify({
            text: "<%= message %>",
            backgroundColor: "<%= background_colour %>",
            className: "",
            duration: 20000,
            gravity: "bottom",
            position: "right",
            close: true
          }).showToast();
    </script>
  <% end %>
<% end %>